[user]
	name = Huayong Kuang
	email = sudohuoty@163.com
[credential]
	helper = store
[core]
	editor = vim
    autocrlf = input
    safecrlf = true
	filemode = true
	quotepath = false
	excludesfile = ~/.gitignore
[color]
    ui = true
[branch]
	autosetuprebase = always
[pull]
	rebase = true
[merge]
    ff = no
[rebase]
	stat = true
[push]
	default = simple
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[alias]
    df = diff
    dfc = diff --cached
    co = checkout
    cmt = commit -avm
    fe = fetch
    feo = fetch origin
    pl = pull --rebase
    plo = pull --rebase origin
    mg = merge --no-ff
    ps = push
    pso = push origin
    rb = rebase
    rbi = rebase -i
    rbc = rebase --continue
    rba = rebase --abort
    rbf = rebase FETCH_HEAD
    mt = mergetool
    br = branch
    brv = branch -vv
    bra = branch -a
    brr = branch -r
    cbr = rev-parse --abbrev-ref HEAD
    ra = remote -v
    rsth = reset --hard
    rsts =dd reset --soft
    recover = reset --hard HEAD
    rvt = revert
    st = status
    stu = status -uno
    subm = submodule
    submu = submodule update --recursive --init
    cp = cherry-pick
    cpc = cherry-pick --continue
    cpa = cherry-pick --abort
    ls = log --stat
    graph = log --pretty=fuller --graph
    slog = !git --no-pager shortlog -snec
    fec = !sh -c 'git fetch $1 $2 && git checkout $2' -
    feoc = !sh -c 'git fetch origin $1 && git checkout $1' -
    lo = !git --no-pager log --oneline --decorate
    loh = !git --no-pager log -20 --oneline --decorate
    last = !git --no-pager log -n 1
    grep = git log --grep
    recommit = !git add -A && git commit -a --amend
    apcommit = !git add --all && git commit --amend --no-edit
    uncommit = reset --soft HEAD^
    unstage = reset HEAD
    assume = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    assumed = !git ls-files -v | grep ^h | cut -c 3-
    pscb = !git push origin `git cbr`
    plcb = !git pull origin `git cbr`
    psar = !git remote  | xargs -t -L1 -I$ git push $ `git cbr`
    wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset --hard HEAD~1
    alias = config --get-regexp alias
[http]
	postBuffer = 524288000
[https]
	postBuffer = 524288000
